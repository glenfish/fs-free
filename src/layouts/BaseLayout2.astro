---
import '~/assets/styles/base.css';

import MetaTags from '~/components/core/MetaTags.astro';
import BasicScripts from '~/components/core/BasicScripts.astro';
import FormScripts from '~/components/core/FormScripts.astro';
import HeaderScripts from '~/components/core/HeaderScripts.astro';
import HeaderScripts2 from '~/components/core/HeaderScripts2.astro';
const { meta = {} } = Astro.props;
---

<!doctype html>
<html lang="en" class="motion-safe:scroll-smooth 2xl:text-[20px]">
	<head>
		<meta charset="utf-8" />

		<MetaTags {...meta} />
		<HeaderScripts />
		<HeaderScripts2 />
	</head>

	<body class="antialiased text-gray-900 dark:text-slate-500 tracking-tight bg-white dark:bg-slate-900">
		<slot />
		<BasicScripts />
		<style is:global>
			img {
				content-visibility: auto;
			}
		</style>
		<!-- <FormScripts />   -->
	</body>
</html>
